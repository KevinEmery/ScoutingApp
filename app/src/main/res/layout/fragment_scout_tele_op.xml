<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="org.usfirst.frc.team4911.scouting.ScoutTeleOpFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeleOp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Shot Attempt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!--This is the fragmentcontainer for the shooting event collection fragment-->
        <FrameLayout
            android:id="@+id/fragment_container_tele_op_shooting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Gear Attempt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!--This is the fragmentcontainer for the shooting event collection fragment-->
        <FrameLayout
            android:id="@+id/fragment_container_tele_op_gear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Hopper Attempt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <FrameLayout
            android:id="@+id/fragment_container_tele_op_hopper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkbox_tele_op_played_defence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Played defence"/>

        <Button
            android:id="@+id/button_tele_op_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
</ScrollView>
