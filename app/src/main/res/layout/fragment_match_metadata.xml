<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.angwy.scoutingapp.matchscouting.CollectMetadataFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/label_scout_name" />

    <EditText android:id="@+id/edit_text_scout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonStartAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_start_auto" />

</LinearLayout>
