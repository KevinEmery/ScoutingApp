<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.usfirst.frc.team4911.scouting.GearAttemptFragment">

    <CheckBox
        android:id="@+id/checkbox_record_gear_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_success"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_gear_record_auto_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_location"/>

        <Button
            android:id="@+id/btn_gear_record_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_label_location"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_gear_record_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_record_attempt"/>
</LinearLayout>
