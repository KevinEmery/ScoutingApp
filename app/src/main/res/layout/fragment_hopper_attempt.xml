<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.usfirst.frc.team4911.scouting.HopperAttemptFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/toggle_button_hopper_attempt_activated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Hopper activated [X]"
            android:textOff="Hopper activated" />

        <Button
            android:id="@+id/button_hopper_attempt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_hopper_attempt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="#FFD700"
        android:text="Record hopper attempt"/>
</LinearLayout>
