<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.usfirst.frc.team4911.scouting.AutonomousFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Baseline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <RadioGroup android:layout_width="100dp"
        android:layout_height="75dp">

        <RadioButton
            android:text="Crossed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton13"
            android:layout_weight="1" />

        <RadioButton
            android:text="Not Crossed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton14"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Fuel "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <RadioGroup
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_height="100dp">

        <RadioButton
            android:text="High"
            android:layout_width="match_parent"
            android:id="@+id/radioButton" />

        <RadioButton
            android:text="Low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1" />

        <RadioButton
            android:text="Both"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Miss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/progressBar"
        android:visibility="visible"
        android:max="100"
        android:progress="50" />

    <Button
        android:text="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />

    <TextView
        android:text="Gear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <RadioButton
            android:text="Success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton21"
            android:layout_weight="1" />

        <RadioButton
            android:text="Fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton22"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7" />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="100dp" >

        <RadioButton
            android:text="Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />

        <RadioButton
            android:text="Center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10"
            android:layout_weight="1" />

        <RadioButton
            android:text="Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton11"
            android:layout_weight="1" />
    </RadioGroup>

    <CheckBox
        android:text="2nd Action?"
        android:layout_width="match_parent"
        android:id="@+id/SecondActionButton_Auto"
        android:layout_height="match_parent" />

</LinearLayout>
